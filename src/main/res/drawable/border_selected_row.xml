<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/border_cell" />
    <item
        android:left="-32sp"
        android:right="-32sp"
        android:top="-32sp">
        <rotate android:fromDegrees="0">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/selected_cell_line"
                    android:color="@color/colorLineSelection" />
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="-32sp"
        android:left="-32sp"
        android:right="-32sp">
        <rotate android:fromDegrees="0">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/selected_cell_line"
                    android:color="@color/colorLineSelection" />
            </shape>
        </rotate>
    </item>

</layer-list>
